# Start MQTT server (if requested)
if [ "$jv_pg_mqtt_launch_server" = true ]; then
  mosquitto -p $jv_pg_mqtt_port 2>&1 | jv_add_timestamps >>$jv_dir/jarvis.log &
fi

# Start publisher daemon
jv_pg_mqtt_start

# Send MQTT message
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
python $DIR/../mqttGateway.py -m="Starting Jarvis" -t="$jv_pg_mqtt_topic/events" -s="$jv_pg_mqtt_server" -p="$jv_pg_mqtt_port" 2>&1 | jv_add_timestamps >>$jv_dir/jarvis.log
